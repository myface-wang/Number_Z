<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bmob.otaku.number_z.view.rollviewpager.RollPagerView
        android:id="@+id/roll_view_pager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:rollviewpager_hint_mode="point"
        app:rollviewpager_play_delay="3500"
        app:rollviewpager_hint_gravity="right"
        app:rollviewpager_hint_paddingBottom="16dp"
        app:rollviewpager_hint_paddingRight="16dp"
        app:rollviewpager_hint_color="#7c7c7c"
        app:rollviewpager_hint_alpha="0"
        />

</LinearLayout>
