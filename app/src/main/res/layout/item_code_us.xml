<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_click_bg_selector"
            >

            <cn.bmob.otaku.number_z.view.CircleImageView
                android:id="@+id/image_code_us"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:scaleType="centerCrop"
                app:border_width="1.5dp"
                app:border_color="@color/white"
                android:src="@drawable/head"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_code_us"
                android:layout_toLeftOf="@id/right"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:id="@+id/code_title_us"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    style="@style/Text_Title"
                    />

                <TextView
                    android:id="@+id/code_content_us"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    style="@style/Text_Content"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/right"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/image_code_zan"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/star"
                    android:padding="10dp"
                    android:background="@drawable/item_click_bg_selector"
                    />

                <TextView
                    android:layout_toRightOf="@+id/image_code_zan"
                    android:id="@+id/tv_code_zan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="~"
                    />

                <ImageView
                    android:layout_below="@+id/image_code_zan"
                    android:id="@+id/image_code_cai"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="10dp"
                    android:src="@drawable/cai"
                    android:background="@drawable/item_click_bg_selector"
                    />
                <TextView
                    android:layout_below="@+id/tv_code_zan"
                    android:layout_toRightOf="@+id/image_code_cai"
                    android:id="@+id/tv_code_cai"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="~"
                    />

            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
