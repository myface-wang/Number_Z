<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_click_bg_selector"
            >

            <ImageView
                android:id="@+id/image_code_me"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_code_me"
                android:layout_toLeftOf="@id/right"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/code_title_me"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    style="@style/Text_Title"
                    />

                <TextView
                    android:id="@+id/code_content_me"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    style="@style/Text_Content"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/image_code_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    />

                <TextView
                    android:id="@+id/tv_code_zan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:text="~"
                    />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
